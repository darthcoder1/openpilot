{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug spinner (host)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceRoot}/selfdrive/ui/spinner/spinner",
      "args": ["test"],
      "stopAtEntry": false,
      "cwd": "${workspaceRoot}/selfdrive/ui/spinner/",
      "environment": [],
      "externalConsole": false,
      "MIMode": "lldb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "miDebuggerPath": "/usr/bin/lldb-mi"
    },
    {
      "name": "Debug spinner (remote)",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceRoot}/selfdrive/ui/spinner/spinner",
      "args": ["welcome from debugger"],
      "stopOnEntry": true,
      "initCommands": [
        "platform select remote-linux",
        "platform connect connect://skynet-x1:9999"
      ]
    }
  ]
}
